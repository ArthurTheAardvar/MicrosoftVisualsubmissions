#include <iostream>
using namespace std;

int main() {

	char dessert;
	char dessert2;
	cout << "Do you want ice cream or candy" << endl;
	cin >> dessert;
	
	cout << "Do you want chocolate or fruit" << endl;
	cin >> dessert2;

	if (dessert == 'i')
		if (dessert2 == 'c')
			cout << "You get a hot fudge sundae" << endl;
		else if (dessert2 == 'f')
			cout << "You get the strawberry blizzard" << endl;

	if (dessert == 'c')
		if (dessert2 == 'c')
			cout << "You get a hershey's bar" << endl;
		else if (dessert2 == 'f')
			cout << "You get the starbursts" << endl;

}
